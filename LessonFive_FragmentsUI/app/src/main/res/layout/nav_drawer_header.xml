<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp">

    <ImageView
        android:id="@+id/nav_drawer_header_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"/>
    <!-- Include a header image -->

    <TextView
        android:id="@+id/nav_drawer_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nav_drawer_header_image"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/nav_drawer_header_title"
        android:text="@string/nav_drawer_subtitle"
        android:textSize="2sp"/>

    <TextView
        android:id="@+id/nav_drawer_header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_drawer_header_title"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/nav_drawer_header_image"
        android:text="@string/nav_drawer_subtitle"
        android:textSize="16sp" />

</RelativeLayout>