<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LessonSix_MaterialComp" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Customize your light theme here. -->
    <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.LessonSix_MaterialComp" parent="Base.Theme.LessonSix_MaterialComp" />

    <!-- Creating a new style -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary app color. -->
        <item name="colorPrimary">@color/blue_accent</item>
        <!-- Primary app color (dark). -->
        <item name="colorPrimaryDark">@color/blue_accent_dark</item>
        <!-- Accent color (for selected items). -->
        <item name="colorAccent">@color/blue_accent_light</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/blue_accent_text</item>
        <!-- Button background color. -->
        <item name="colorButtonNormal">@color/blue_accent</item>
        <!-- Checkbox and radio button color. -->
        <item name="colorControlNormal">@color/blue_accent</item>
        <!-- Progress bar color. -->
        <item name="colorControlActivated">@color/blue_accent</item>
        <!-- Tab indicator color. -->
        <item name="android:colorAccent">@color/blue_accent</item>
        <!-- Divider color. -->
        <item name="android:colorForeground">@color/blue_accent_divider</item>
    </style>

    <!-- New style with red accent -->
    <style name="AppThemeRedish" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary app color. -->
        <item name="colorPrimary">@color/red_accent</item>
        <!-- Primary app color (dark). -->
        <item name="colorPrimaryDark">@color/red_accent_dark</item>
        <!-- Accent color (for selected items). -->
        <item name="colorAccent">@color/red_accent_light</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/red_accent_text</item>
        <!-- Button background color. -->
        <item name="colorButtonNormal">@color/red_accent</item>
        <!-- Checkbox and radio button color. -->
        <item name="colorControlNormal">@color/red_accent</item>
        <!-- Progress bar color. -->
        <item name="colorControlActivated">@color/red_accent</item>
        <!-- Tab indicator color. -->
        <item name="android:colorAccent">@color/red_accent</item>
        <!-- Divider color. -->
        <item name="android:colorForeground">@color/red_accent_divider</item>
    </style>

</resources>




